/**index.wxss**/
@import "../template/yuyue.wxss";

.swiper-container {
  position: relative;
  width: 750rpx;
}

.swiper_box {
  width: 100%;
  height: 360rpx;
}

swiper-item image {
  width: 100%;
  height: 360rpx;
  display: block;
  overflow: hidden;
}

.nav {
  background: #fff;
  display: flex;
  margin: 78rpx 0 78rpx 0;
}

.nav .nva-list {
  text-align: center;
  flex: 1;
}

.nav .nva-list image {
  width: 84rpx;
  height: 84rpx;
  display: block;
  overflow: hidden;
  margin: 0 auto;
}

.nav .nva-list .text {
  margin-top: 34rpx;
  font-size: 13px;
  color: #666;
}
