.yuyue {
  padding: 24rpx 0;
  border-top: 24rpx solid #f0f0f0;
  border-bottom: 24rpx solid #f0f0f0;
}

.yuyue .bg {
  height: 200rpx;
  margin: 0 20rpx;
  align-items: center;
  display: flex;
  border-radius: 12rpx;
  box-shadow: 0 8px 18px 0 rgba(255, 102, 51, 0.32);
  background-size: cover;
}

.yuyue .yuyue-list {
  position: relative;
  flex: 1;
  padding-left: 20rpx;
}

.yuyue .yuyue-list .t1 {
  font-size: 11px;
  color: hsla(0, 0%, 100%, 0.75);
  white-space: nowrap;
  display: block;
}

.yuyue .yuyue-list .t2 {
  font-size: 21px;
  color: #fff;
  white-space: nowrap;
  display: block;
}

.yuyue .yuyue-list image {
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  right: 0;
  width: 180rpx;
  height: 60rpx;
}